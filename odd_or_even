#include <stdio.h>

int main() {
    int num;

    // Asking the user to input a number
    printf("Enter a number: ");
    scanf("%d", &num);

    // Checking if the number is even or odd
    if (num % 2 == 0) {
        printf("%d is even.\n", num);
    } else {
        printf("%d is odd.\n", num);
    }

    return 0;
}
